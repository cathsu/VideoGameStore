{{> header }}
{{#each user}}
<div class="wrapper">
    <div id="formContent">
        <!-- Login Form -->
        <h1>Account Details</h1>
        <!-- display info and allow user to update-->
        <form id="account" action="/account" method="POST">
            <h2>{{username}}</h2>
            <h2>{{firstName}}</h2>
            <h2>{{lastName}}</h2>
            <button class="btn btn-primary btn-lg btn-block"><a class="nav-link" href="/">Home Screen</a></button>
        </form>

    </div>
</div>
{{/each}}
{{> footer }}